<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
      
        <Property name="layout1">%d{ABSOLUTE} %-5p [%c{2}] %m%n</Property>
        <Property name="layout2">%d %-5p [%c{2}] %m%n</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${layout1}"/>
        </Console>
      
      
      
    </Appenders>
    <Loggers>
        <Root level="info">
        
            <AppenderRef ref="Console" />
            
        </Root>
        
       
    </Loggers>
</Configuration>
